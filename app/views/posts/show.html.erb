

<div id="post_show_content" class="skinny_wrapper wrapper_padding">
		<header>
			<p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
			<h1><%= @post.title%></h1>
			<hr>
		</header>
		<div id="content">
			<p><%= @post.content %></p>
			<%= link_to "Edit", edit_post_path(@post)%>
			<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}%>
			</div>
			<hr>

			<div id="share_box">
				<p>Share the DO list</p>
				<a href="https://twitter.com/"><i class="fa fa-twitter" aria-hidden="true"></i></a>
				<a href="https://github.com/"><i class="fa fa-github" aria-hidden="true"></i></a>
				<a href="https://dribbble.com/"><i class="fa fa-dribbble" aria-hidden="true"></i></a>
			</div>

			<hr>

	</div>
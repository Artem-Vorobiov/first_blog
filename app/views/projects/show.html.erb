<div id="post_show_content" class="skinny_wrapper wrapper_padding">
		<header>
			<p class="date"><%= @project.created_at.strftime('%A, %B %d') %></p>
			<h1><%= @project.title %></h1>
			<hr>
		</header>
		<div id="content">
			<p><%= markdown @project.description %></p>
				<div class="button_wrapper">
					<a href="<%= @project.link %>" class="project_button" target="_blank">  Visit <%= @project.title %> </a>
				</div>
		</div>

		<%= link_to 'Edit', edit_project_path(@project) %>
		<%= link_to 'Delete', project_path(@project), method: :delete, data: {confirm: "Are you sure?"}%>
			<hr>

			<div id="share_box">
				<p>Share the DO list</p>
				<a href="https://twitter.com/"><i class="fa fa-twitter" aria-hidden="true"></i></a>
				<a href="https://github.com/"><i class="fa fa-github" aria-hidden="true"></i></a>
				<a href="https://dribbble.com/"><i class="fa fa-dribbble" aria-hidden="true"></i></a>
			</div>

			<hr>

			<%= render 'disqus' %>

	</div>